<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false" threshold="null"
  xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender class="org.apache.log4j.ConsoleAppender" name="STDOUT">
    <param name="target" value="System.out" />
    <layout class="org.apache.log4j.PatternLayout">
      <!-- param name="ConversionPattern" value="%-5p %c [%t]: %m%n" / -->
      <!-- param name="ConversionPattern" value="%-5p %c [%d{HH:mm:ss,SSS}]: %m%n" / -->
      <!-- param name="ConversionPattern" value="%r %-5p %c: %m%n"/ -->
      <!-- param name="ConversionPattern" value="%-5p %-50.50c - %m%n" /-->
      <param name="ConversionPattern" value="%-5p|%-30.30c| #%L - %m%n" />
    </layout>
  </appender>
  
  <logger name="org.apache">
    <level value="INFO" />
  </logger>
  <logger name="ch.srsx.swat">
    <level value="DEBUG" />
  </logger>
  <root>
    <level value="INFO" />
    <appender-ref ref="STDOUT" />
  </root>
</log4j:configuration>
